        <item name="colorPrimary">@color/core_orange_200</item>
        <item name="colorPrimaryVariant">@color/core_orange_200</item>
        <item name="colorOnPrimary">@color/core_black_900</item>

        <item name="colorSecondary">@color/core_orange_200</item>
